<div>
  <div class="flex items-center space-x-4">
    <%= image_tag 'logo.jpg', alt: "Logo", class: 'my-6' %>
    <%= image_tag @avatar, alt: "Avatar", class: 'w-24 h-24 rounded-full' %>
  </div>
  <p>
    <%= "Hello, #{current_user.name}, welcome to Line - The Developers Marketplace " %>
  </p>
  <div data-controller="wallet" data-wallet-project-id-value="<%= Rails.application.credentials.dig(:wallet_connect, :project_id)%>" data-wallet-user-id="<%= current_user.id %>">
    <button data-wallet-target="openModal" data-action="click->wallet#openConnectModal">Open Modal</button>
  </div>
</div>
